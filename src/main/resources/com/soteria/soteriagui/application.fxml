<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.soteria.soteriagui.ApplicationController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Soteria!" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Start by adding your cameras" />
      <VBox fx:id="cameraList" prefHeight="200.0" prefWidth="100.0" />
      <Button mnemonicParsing="false" onAction="#openAddCamera" text="+ Add another" />
   </children>
</VBox>
